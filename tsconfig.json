{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    // ðŸ‘‡ These two lines make @/ work
    "baseUrl": ".",
    "paths": { "@/": [""] }
  },
  "include": ["/.ts", "/.tsx", ".next/types//*.ts"],
  "exclude": ["node_modules"]
}
